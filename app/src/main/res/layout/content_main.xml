<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleWhite"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.retailer.activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <GridView
        android:id="@+id/category_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/category_list_margin_left"
        android:layout_marginRight="@dimen/category_list_margin_right"
        android:layout_marginTop="@dimen/category_list_margin_top"
        android:gravity="center"
        android:horizontalSpacing="@dimen/category_list_spacing"
        android:numColumns="@integer/category_list_columns"
        android:verticalSpacing="@dimen/category_list_spacing" />

</RelativeLayout>
